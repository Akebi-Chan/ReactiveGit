<Window x:Class="ReactiveGit.Gui.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReactiveGit.Gui.WPF"
        xmlns:converters="clr-namespace:ReactiveGit.Gui.WPF.Converters"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:commits="clr-namespace:ReactiveGit.Gui.Base.ViewModel;assembly=ReactiveGit.Gui.Base"
        xmlns:commitHistory="clr-namespace:ReactiveGit.Gui.Base.ViewModel.CommitHistory;assembly=ReactiveGit.Gui.Base"
        xmlns:view="clr-namespace:ReactiveGit.Gui.WPF.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" 
        DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Repository" Command="{Binding SelectRepository}" />
            </MenuItem>
        </Menu>
        <xcad:DockingManager x:Name="dockManager" DocumentsSource="{Binding RepositoryViewModels}">
            <xcad:DockingManager.LayoutItemTemplate>
                <DataTemplate>
                    <view:HistoryView ViewModel="{Binding CommitHistoryViewModel}" />
                </DataTemplate>
            </xcad:DockingManager.LayoutItemTemplate>
            <xcad:DockingManager.LayoutItemContainerStyle>
                <!-- you can add additional bindings from the layoutitem to the DockWindowViewModel -->
                <Style TargetType="{x:Type xcad:LayoutItem}" >
                    <Setter Property="Title" Value="{Binding FriendlyName}" />
                    <!--<Setter Property="CloseCommand" Value="{Binding Model.CloseCommand}" />-->
                    <Setter Property="CanClose" Value="true" />
                </Style>
            </xcad:DockingManager.LayoutItemContainerStyle>
        </xcad:DockingManager>
